<div class="container">
<h2 class= "center #d50000 red accent-4">New Ingredient</h2>
<br>
<div class="#ffffff white">
<%= form_for @ingredient do |f| %>
<div class="center">
    <%= f.hidden_field :recipe_id, :value => params[:recipe_id] %>
</div>
<div class="center">
    <%= f.label :name, :style=>"color:black; font-size:17px;" %>
    <%= f.text_field :name %>
</div>
<div class="center">
    <%= f.label :amount, :style=>"color:black; font-size:17px;" %>
    <%= f.text_field :amount %>
</div>
<div class="center">
    <%= f.label :measurement, :style=>"color:black; font-size:17px;" %>
    <%= f.text_field :measurement %>
</div>
<div class="center">
    <button class="waves-effect waves-light #d50000 red accent-4"><%= f.label :is_available, :style=>"color:black; font-size:17px;" %></button>
    <%= f.check_box :is_available %>
</div>
<br><br>
<div class="center"><button class="waves-effect waves-light #d50000 red accent-4"><%= f.submit "Submit" %></button></div>
<br><br>
<% end %>
</div>
</div>
<br><br>
<div class="center"><button class="#d50000 red accent-4"><a href= "/" class="black-text text-darken-2">GET OUT!!!</a></button></div>