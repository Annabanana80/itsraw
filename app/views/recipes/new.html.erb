<h1 class= "center col s12; #d50000 red accent-4">New Recipe</h1>
<div class="card-panel #d50000 red accent-4">
<%= form_for @recipe do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :img %>
    <%=f.text_field :img %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :made_it_yet %>
    <%= f.check_box :made_it_yet %>
  </div>
  <div>
    <%= f.label :directions %>
    <%= f.text_area :directions %>
</div>
  <%= f.submit "New Recipe" %>
<% end %>
</div>
<div class="center"><button class="#d50000 red accent-4"><a href= "/" class="black-text text-darken-2">GET OUT!!!</a></button></div>
