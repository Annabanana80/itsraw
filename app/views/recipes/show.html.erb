<body>
  <div class="container">
<h2 class="col s12; #d50000 red accent-4"><%= @recipe.title %></h2>
<div class = "row">
  <div class="col s6 push-s6">
  <h4 class="#d50000 red accent-4">Directions:</h4> 
  <pre style= 'white-space: pre-wrap; word-wrap: break-word; width:300px; height:600px; font-family: roboto' class="#ffffff white">
    <%= @recipe.directions %></pre>
</div>
<div class="col s6 pull-s6">
  <div class="show_image"><img style='width: 100%; height:100% margin:0; padding:0' src= <%= @recipe.img %>  /></div> 
  <h5 class="#d50000 red accent-4">Description:</h5> 
    <p class="#d50000 red accent-4"><%= @recipe.description %></p>
  <h5 class="#d50000 red accent-4">Made it Yet?</h5> 
    <p class="#d50000 red accent-4"><%= @recipe.made_it_yet %></p>
</div>
</div>
<br>
<button class="#d50000 red accent-4"><%= link_to "DONKEY!!Edit #{@recipe.title}", edit_recipe_path(@recipe), :style=>"color:black;" %></button>
<button class="#d50000 red accent-4"><%= link_to "SHUT IT DOWN!", recipe_path(@recipe), method: :delete, data: { confirm: 'Are you sure you want to delete?' }, :style=>"color:black;"%></button>
<h3 class="center col s12; #d50000 red accent-4">Ingredients</h3>
<div class="center"><button class="#d50000 red accent-4"><%= link_to "New Ingredient", new_ingredient_path(:recipe_id => @recipe.id), :style=>"color:black;"%></button></div>
<br><br>
<table class="bordered #ffffff white">
  <tr>
    <th>Name</th>
    <th>Amount</th>
    <th>Measurement</th>
    <th>Available?</th>
  </tr>

  <% @recipe.ingredients.each do |ingredient| %>
    <tr>
      <td><%= ingredient.name %></td>
      <td><%= ingredient.amount %></td>
      <td><%= ingredient.measurement %></td>
      <td><%= ingredient.is_available %></td>
       <td><% ingredient.recipe_id %></td>
      <td><button class="#d50000 red accent-4"><%= link_to "Edit", edit_ingredient_path(ingredient.id), :style=>"color:black;"%></td></button>
      <td><button class="#d50000 red accent-4"><%= link_to "Delete", ingredient_path(ingredient.id),  method: :delete, :style=>"color:black;" %></td></button>
    </tr>
  <% end %>
</table>
<br><br>
<div class="center"><button class="waves-effect waves-light #d50000 red accent-4"><a href= "/" class="black-text text-darken-2">GET OUT!!!</a></button></div>

</div>
</body>
<br><br.